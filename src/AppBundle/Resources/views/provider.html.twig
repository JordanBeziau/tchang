{% extends 'base.html.twig' %}
{% block body %}
  <h1 class="title is-h1">👨🏻‍🍳 Providers</h1>
  <a href="{{ path('newProvider') }}" class="button is-primary is-medium is-uppercase">+ Add provider</a>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Siret</th>
        <th>Update</th>
        <th>Remove</th>
      </tr>
    </thead>
    <tbody>
      {% for provider in providers %}
        <tr>
          <td>{{ provider.name }}</td>
          <td>{{ provider.address }}</td>
          <td>{{ provider.siret }}</td>
          <td>
            <a href="{{ path('providerEdit') }}/{{ provider.id }}" class="button is-link">🖊 Update</a>
          </td>
          <td>
            <a href="{{ path('provider') }}/delete/{{ provider.id }}" class="button is-link">╳ Remove</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}