{% extends 'base.html.twig' %}
{% block body %}
  <h1 class="title is-h1">Add a supply</h1>
  {{ form_start(form) }}
  <div class="field">
    {{ form_label(form.name, '', {'label_attr' : {'class' : 'label'}}) }}
    <div class="control">
      {{ form_widget(form.name) }}
    </div>
  </div>
  <div class="field">
    {{ form_label(form.buyingPrice, '', {'label_attr' : {'class' : 'label'}}) }}
    <div class="control">
      {{ form_widget(form.buyingPrice) }}
    </div>
  </div>
  <div class="field">
    {{ form_label(form.sellingPrice, '', {'label_attr' : {'class' : 'label'}}) }}
    <div class="control">
      {{ form_widget(form.sellingPrice) }}
    </div>
  </div>
  <div class="field">
    {{ form_label(form.active, '', {'label_attr' : {'class' : 'label'}}) }}
    <div class="control">
      {{ form_widget(form.active) }}
    </div>
  </div>
  {{ form_rest(form) }}
  <input type="submit" value="Create" class="is-uppercase button is-primary is-medium">
  {{ form_end(form) }}
{% endblock %}